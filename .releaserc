{
	"branches": ["main", "master"],
	"plugins": [
		["@semantic-release/commit-analyzer", {
			"preset": "angular",
			"releaseRules": [
				{ "type": "feat", "release": "minor" },
				{ "type": "fix", "release": "patch" },
				{ "type": "perf", "release": "patch" },
				{ "type": "revert", "release": "patch" },
				{ "breaking": true, "release": "major" }
			]
		}],
		["@semantic-release/release-notes-generator", {
			"preset": "angular",
			"presetConfig": {
				"types": [
					{ "type": "feat", "section": "âœ¨ New Features" },
					{ "type": "fix", "section": "ğŸ› Bug Fixes" },
					{ "type": "perf", "section": "âš¡ Performance Improvements" },
					{ "type": "refactor", "section": "ğŸ”§ Refactoring" },
					{ "type": "docs", "section": "ğŸ“š Documentation" },
					{ "type": "style", "section": "ğŸ’… Code Style", "hidden": false },
					{ "type": "chore", "section": "ğŸ”¨ Chores", "hidden": false },
					{ "type": "test", "section": "ğŸ§ª Tests", "hidden": false },
					{ "type": "ci", "section": "ğŸ‘· CI/CD", "hidden": false },
					{ "type": "build", "section": "ğŸ“¦ Build", "hidden": false },
					{ "type": "revert", "section": "âª Reverts" },
					{ "type": "security", "section": "ğŸ”’ Security Fixes" }
				]
			},
			"writerOpts": {
				"commitsSort": ["subject", "scope"]
			}
		}],
		[
			"@semantic-release/exec", {
				"prepareCmd": "python $GITHUB_WORKSPACE/.github/helper/update-version.py ${nextRelease.version}"
			}
		],
		[
			"@semantic-release/git", {
				"assets": ["*/__init__.py"],
				"message": "chore(release): Bumped to Version ${nextRelease.version}"
			}
		],
		["@semantic-release/github", {
			"successComment": false,
			"releasedLabels": false
		}]
	]
}
